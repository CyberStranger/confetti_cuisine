<div class="data-form">
    <form action="/subscribers/create" method="post">
        <h2>Create a new subscriber:</h2>
        <label for="inputName">Name</label>
        <input type="text" name="name" id="inputName" placeholder="Name" autofocus>
        <label for="inputEmail">Email address</label>
        <input type="email" name="email" id="inputEmail" placeholder="Email address" required>
        <label for="inputZipCode">ZipCode</label>
        <input type="text" name="zipCode" id="inputZipCode" pattern="[0-9]{5}" placeholder="Zip Code" required>
        <button class="btn btn-primary" type="submit">Create</button>
    </form>
</div>