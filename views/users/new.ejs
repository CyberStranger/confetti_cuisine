<div class="data-form">
  <div class="col-6 mx-auto">
    <h2>Create a new user:</h2>
    <form action="/users/create" method="post">
      <label for="inputFirstName">First Name</label>
      <input class="form-control" type="text" name="first" id="inputFirstName" placeholder="First" autofocus>
      <label for="inputLastName">Last Name</label>
      <input class="form-control" type="text" name="last" id="inputLastName" placeholder="Last">
      <label for="inputPassword">Password</label>
      <input class="form-control" type="password" name="password" id="inputPassword" placeholder="Password" required>
      <label for="inputEmail">Email address</label>
      <input class="form-control" type="email" name="email" id="inputEmail" placeholder="Email address" required>
      <label for="inputZipCode">Zip Code</label>
      <input class="form-control" type="text" name="zipCode" id="inputZipCode" pattern="\d*" placeholder="Zip Code"
        required>
      <button class="btn btn-primary mt-3" type="submit">Sign In</button>
    </form>
  </div>

</div>