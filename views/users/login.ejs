<div class="data-form mt-5">
  <div class="col-6 mx-auto border rounded-3 shadow p-4">
    <form action="/users/login" method="POST">
      <h2>Login</h2>
      <label for="inputEmail">Email address</label>
      <input class="form-control" type="email" name="email" id="inputEmail" placeholder="Email address" required>
      <label for="inputPassword">Password</label>
      <input class="form-control" type="password" name="password" id="inputPassword">
      <button class="btn btn-info mt-2" type="submit">Login</button>
    </form>
  </div>
</div>