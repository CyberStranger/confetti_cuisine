<div class="data-form">
  <div class="col-6 mx-auto">
    <h2>Edit User</h2>
    <form action="<%=`/users/${user._id}/update?_method=PUT`%>" method="post">
      <label for="inputFirstName">First Name</label>
      <input class="form-control" type="text" name="first" id="inputFirstName" value="<%=user.name.first%>" autofocus>
      <label for="inputLastName">Last Name</label>
      <input class="form-control" type="text" name="last" id="inputLastName" value="<%=user.name.last%>">
      <label for="inputPassword">Password</label>
      <input class="form-control" type="password" name="password" id="inputPassword" value="<%=user.password%>"
        required>
      <label for="inputEmail">Email address</label>
      <input class="form-control" type="email" name="email" id="inputEmail" value="<%=user.email%>" required>
      <label for="inputZipCode">Zip Code</label>
      <input class="form-control" type="text" name="zipCode" id="inputZipCode" pattern="\d*" value="<%=user.zipCode%>"
        required>
      <button class="btn btn-warning mt-3" type="submit">Save User</button>
    </form>
  </div>
</div>